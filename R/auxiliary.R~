create.ConfigFile = function ()
{
    file.create(CONFIG_FILE)

    write.ConfigFile.Hash()
}

write.ConfigFile.Hash = function ()
{
    hash = bindStrings(CONFIG_FILE_COMMENT, CONFIG_FILE_HASH)

    write(hash, CONFIG_FILE)
}

